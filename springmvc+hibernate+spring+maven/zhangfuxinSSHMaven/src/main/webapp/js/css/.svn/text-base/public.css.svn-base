@charset "utf-8";
/* CSS Document */
*{ box-sizing:border-box !important;}
/*全局控制*/
body{ padding:0; margin:0; font-family:"微软雅黑"; font-size:12px;}
/*清除浏览器默认样式*/
p,h1,h2,h3,h4,h5,h6,span,ul,li,dl,dt,dd,ol,li,input,img,a,span{ padding:0; margin:0; list-style:none; border:0; outline:none;font-weight:normal;}/* outline:none;轮廓*/
i,b{ font-family:Arial, Helvetica, sans-serif; font-weight:normal; padding:0; margin:0;}
/*文字字体为Tahoma，如果用户电脑里面没有这个字体，就使用Arial作为字体，以此类推，最后的Sans-serif一般是所有电脑都有的。这种写法主要是避免因为用户电脑里面没有某种字体而导致的显示不美观的情况/
 font-weight:normal; 字体的粗细*/
a{ text-decoration:none;}
/*去掉超链接下划线*/
a:hover{ text-decoration:none;}
img{border:0;}
.clear {clear: both;}

#body {
	min-width:1200px;
    background:url(../images/bj.jpg) no-repeat fixed center top / cover;/* / cover */
    min-height: 100%;
    overflow-x: hidden !important;
    z-index: -2;
	padding-left:15px;
}
/* header
-----------------------------*/
.header{ width:100%; height:75px;}
.logo{ width:196px; height:75px; margin-right:50px; float:left;}
.logo a img{ margin-top:18px;}
.header_name{ width:26%; height:46px; margin-top:14px; float:left;
    background:#243650;filter:alpha(opacity=20); /*IE滤镜，透明度50%*/
	-moz-opacity:0.2; /*Firefox私有，透明度50%*/
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 30px;
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1);
    color: #ffffff;
    padding:0 45px 0 20px;
}
.header_name p{ line-height:46px; font-family:"微软雅黑"; font-size:20px; color:#FFF;}
.header_user{ width:160px; height:47px; float:right; margin-top:14px; margin-right:20px;}
.header_u_left{ width:47px; height:47px; float:left; padding:1px 0 0 1px; border-radius:50px; background:#FFF;}
.header_u_left a{ width:46px; height:46px; display:block; overflow:hidden; border-radius:50px;}
.header_u_right{ width:102px; height:47px; float:right;position:relative;}
.header_u_right a p{ line-height:47px; text-align:left; font-family:"微软雅黑"; color:#FFF; font-size:12px; background:url(../images/triangle.png) center right no-repeat;}


.pulldown{ width:160px; height:126px; position:absolute; top:40px; right:0; z-index:998; display:none;}
.pulldown_1{ width:16px; height:11px; position:absolute; z-index:1; right:20px; top:10px; background:url(../images/corner.png) no-repeat;}
.pulldown_2{ width:160px; height:89px; background:#FFF; border:#d7d7d7 1px solid; border-radius:5px; margin-top:20px;}
.pulldown_2 ol{ width:100%; height:52px; border-bottom:#d7d7d7 1px solid;}
.pulldown_2 ol li{ width:100%; height:26px;}
.pulldown_2 ol li a{ width:100%; height:22px; line-height:22px; display:block;}
.u_11{ background:url(../images/u_1.png) 30px center no-repeat;}
.u_22{ background:url(../images/u_2.png) 30px center no-repeat;}
.u_33{ background:url(../images/u_3.png) 30px center no-repeat;}
.pulldown_2 ol li a p:hover,.quit a:hover{ color:#65c3df;}
.pulldown_2 ol li a p{ line-height:22px; text-align:center; font-family:"微软雅黑"; color:#646464; font-size:12px;}
.quit{ width:100%; height:30px; text-align:center;}
.quit a{ width:100%; height:30px; line-height:30px; display:block; font-family:"微软雅黑"; color:#646464; font-size:12px;}


/*----END-----*/











































































